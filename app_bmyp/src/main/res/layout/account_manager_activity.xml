<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="com.yueke.app.bmyp.activitys.AccountManagerActivity" />

        <variable
            name="pageData"
            type="com.askia.coremodel.viewmodel.AccountManagerViewModel.PageData" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:qmui_topbar_bg_color="@color/white">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            app:qmui_topbar_bg_color="@color/white"
            app:qmui_topbar_image_btn_height="@dimen/dp_21"
            app:qmui_topbar_image_btn_width="@dimen/dp_22"
            app:qmui_topbar_left_back_drawable_id="@drawable/icon_back"
            app:qmui_topbar_separator_color="@color/transparent"
            app:qmui_topbar_title_color="@color/black"
            app:qmui_topbar_title_text_size="@dimen/sp_18" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:background="@color/line_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:onClick="@{handlers::jumpToModifyPhoneNum}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/mobile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@{pageData.phoneNum}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/icon_more" />

                        </LinearLayout>


                    </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                    <!--分割线-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/lighter_gray" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:onClick="@{handlers::jumpToUnBindWechat}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/wechat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@{pageData.wechatNickName}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/icon_more" />

                        </LinearLayout>


                    </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                    <!--分割线-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/lighter_gray" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:onClick="@{handlers::jumpToUnBindAlipay}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/alipay"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@{pageData.alipayNickName}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/icon_more" />

                        </LinearLayout>


                    </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                    <!--分割线-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/lighter_gray" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:onClick="@{handlers::jumpToEditorBankCard}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/bank_card"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/icon_more" />


                    </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


    </FrameLayout>

</layout>