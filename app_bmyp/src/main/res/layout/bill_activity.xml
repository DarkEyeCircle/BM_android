<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="com.yueke.app.bmyp.activitys.BillActivity" />

        <variable
            name="pageData"
            type="com.askia.coremodel.viewmodel.BillViewModel.PageData" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            app:qmui_topbar_bg_color="@color/white"
            app:qmui_topbar_image_btn_height="@dimen/dp_21"
            app:qmui_topbar_image_btn_width="@dimen/dp_22"
            app:qmui_topbar_left_back_drawable_id="@drawable/icon_back"
            app:qmui_topbar_separator_color="@color/transparent"
            app:qmui_topbar_title_color="@color/black"
            app:qmui_topbar_title_text_size="@dimen/sp_18" />

        <com.qmuiteam.qmui.widget.QMUIEmptyView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:background="@color/transparent"
            app:qmui_show_loading="true"
            app:qmui_title_text="正在加载">

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/baimeng_wallet_bg"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提现总额(元)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="@{pageData.drawMoneyTotal}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值总额(元)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="@{pageData.rechargeMoneyTotal}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/expense_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/expense_detail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/points_mall_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/points_mall_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/wallet_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/wallet_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/draw_money_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/draw_money_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/merchants_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/merchants_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/collection_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/collection_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/lighter_gray" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                    android:id="@+id/recharge_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white"
                    android:onClick="@{handlers::itemOnclick}"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/recharge_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/icon_more" />

                </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>


            </LinearLayout>

        </com.qmuiteam.qmui.widget.QMUIEmptyView>


    </FrameLayout>

</layout>