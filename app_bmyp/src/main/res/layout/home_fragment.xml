<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.yueke.app.bmyp.fragments.HomeFragment" />

        <variable
            name="pageData"
            type="com.askia.coremodel.viewmodel.HomeViewModel.PageData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/color_shape">

            <!--上滑显示的内容-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/title_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0">

                <!--扫码付款收款-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:background="@drawable/icon_scan_or_1"
                        android:onClick="@{handlers::jumpToScanOR}" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/icon_payment_1"
                        android:onClick="@{handlers::jumpToPayment}" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/icon_proceeds_1"
                        android:onClick="@{handlers::jumpToProceeds}" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:paddingRight="@dimen/dp_10">

                        <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/icon_message"
                            android:onClick="@{handlers::jumpToMes}" />

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/title_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1">

                <!--定位 消息-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.qmuiteam.qmui.layout.QMUILinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/sp_18"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="@{pageData.location}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                    </com.qmuiteam.qmui.layout.QMUILinearLayout>

                    <com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:onClick="@{handlers::jumpToMes}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical"
                            android:onClick="@{handlers::jumpToChat}"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_message" />

                    </com.qmuiteam.qmui.alpha.QMUIAlphaFrameLayout>

                </FrameLayout>

            </android.support.v7.widget.Toolbar>

        </FrameLayout>

        <com.yueke.app.bmyp.widgets.MyCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.yueke.app.bmyp.activitys.MainActivity">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_shape"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <!--扫码 付款 收款-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_10"
                        android:weightSum="3">

                        <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{handlers::jumpToScanOR}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:src="@drawable/icon_scan_or" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="@string/scan_or"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />

                        </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>

                        <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{handlers::jumpToPayment}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:src="@drawable/icon_payment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="@string/payment"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />

                        </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>

                        <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{handlers::jumpToProceeds}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:src="@drawable/icon_proceeds" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="@string/proceeds"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />

                        </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>

                    </LinearLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/dataView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </com.yueke.app.bmyp.widgets.MyCoordinatorLayout>

    </LinearLayout>

</layout>
