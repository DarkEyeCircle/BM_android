<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="com.yueke.app.bmyp.activitys.RecommendedActivity" />

        <variable
            name="pageData"
            type="com.askia.coremodel.viewmodel.RecommendedViewModel.PageData" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            app:qmui_topbar_bg_color="@color/white"
            app:qmui_topbar_image_btn_height="@dimen/dp_21"
            app:qmui_topbar_image_btn_width="@dimen/dp_22"
            app:qmui_topbar_left_back_drawable_id="@drawable/icon_back"
            app:qmui_topbar_separator_color="@color/transparent"
            app:qmui_topbar_title_color="@color/black"
            app:qmui_topbar_title_text_size="@dimen/sp_18" />

        <com.qmuiteam.qmui.widget.QMUIEmptyView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:background="@color/transparent"
            app:qmui_show_loading="true"
            app:qmui_title_text="正在加载">

            <FrameLayout
                android:id="@+id/no_fans_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_76"
                        android:layout_height="@dimen/dp_77"
                        android:background="@drawable/icon_fans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="@string/have_no_fans"
                        android:textColor="#cccccc"
                        android:textSize="@dimen/sp_12" />

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_50"
                        android:onClick="@{handlers::jumpToShare}"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingRight="@dimen/dp_50"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/generate_share"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_16"
                        app:qmui_borderColor="#666666" />


                </LinearLayout>


            </FrameLayout>

            <RelativeLayout
                android:id="@+id/fans_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/line_color">

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp_14"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_14"
                    android:text="我的粉丝"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fans_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_fans"
                    android:layout_marginTop="1px"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/gradient_radius_bg"
                    android:onClick="@{handlers::jumpToShare}"
                    android:text="我的海报"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>


        </com.qmuiteam.qmui.widget.QMUIEmptyView>


    </FrameLayout>

</layout>