<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="com.yueke.app.bmyp.activitys.ScanfProceedsActivity" />

        <variable
            name="pageData"
            type="com.askia.coremodel.viewmodel.ProceedsStatesViewModel.PageData" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUIEmptyView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:qmui_show_loading="true"
            app:qmui_title_text="正在进行交易">

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_60"
                    android:scaleType="fitXY"
                    android:src="@{pageData.isSuccess?@drawable/icon_success:@drawable/icon_failer}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@{pageData.isSuccess ? `收款成功`:`收款失败`}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:orientation="horizontal"
                    android:visibility="@{pageData.isSuccess ? 0:8}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RNB"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="@{pageData.money}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_19" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="@{pageData.errorMes}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="@{pageData.isSuccess ? 8:0}" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/gradient_radius_bg"
                    android:onClick="@{handlers::goBack}"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

        </com.qmuiteam.qmui.widget.QMUIEmptyView>


    </LinearLayout>

</layout>


